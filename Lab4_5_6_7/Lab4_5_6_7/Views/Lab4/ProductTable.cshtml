@model List<Lab4_5_6_7.Models.Product>
@{
    ViewBag.Title = "Table";
}

<div class="row mt-5">
    <a href="~/Lab4/Add" class="btn btn-outline-primary col-12">Додати</a>
    <table class="mt-5 table-bordered table table-striped col-12" style="margin-left: auto; margin-right: auto;">
        <tr>
            <th></th>
            <th>Назва</th>
            <th>Категорії</th>
            <th>Ціна</th>
            <th>Операції</th>
        </tr>
        @foreach (var Item in Model)
        {
            <tr>
                <td><img src="~/File/@Item.File" width="100" /></td>
                <td>@Item.ProductName</td>
                <td>@foreach (var category in Item.Categories)
                {@(category.CategoryName + " ")}</td>
                <td>@Item.Price</td>
                <td>
                    <a href="~/Lab4/Edit/@Item.Id" class="btn btn-outline-primary">Редагувати</a>
                    <a href="~/Lab4/Delete/@Item.Id" class="btn btn-outline-danger mt-3">Видалити</a>
                </td>
            </tr>
        }
    </table>
</div>

