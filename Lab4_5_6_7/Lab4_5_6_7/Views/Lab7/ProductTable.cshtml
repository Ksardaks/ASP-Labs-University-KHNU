@model List<Lab4_5_6_7.Models.Product>
@{
    bool EN = false;
    if (Request.Cookies.Get("lang") != null)
    {
        if (Request.Cookies.Get("lang").Value == "en")
        {
            EN = true;
        }
    }
    ViewBag.Title = "Table";
}

<div class="row mt-5">
    <a href="~/Lab7/Add" class="btn btn-outline-primary col-12">@Resources.Resource.Add</a>
    <table class="mt-5 table-bordered table table-striped col-12" style="margin-left: auto; margin-right: auto;">
        <tr>
            <th></th>
            <th>@Resources.Resource.Name</th>
            <th>@Resources.Resource.Category</th>
            <th>@Resources.Resource.Price</th>
            <th>@Resources.Resource.Operations</th>
        </tr>
        @foreach (var Item in Model)
        {
            <tr>
                <td><img src="~/File/@Item.File" width="100" /></td>
                <td>
                    @if (EN)
                    {
                        @(Item.ProductNameEN)
                    }
                    else
                    {
                        @(Item.ProductName)
                    }
                </td>
                <td>
                    @foreach (var category in Item.Categories)
                    {
                        if (EN)
                        {
                            @(category.CategoryNameEN + " ")
                        }
                        else
                        {
                            @(category.CategoryName + " ")
                        }
                    }
                </td>
                <td>
                    @if (EN)
                    {
                        @(Item.PriceEN)
                    }
                    else
                    {
                        @(Item.Price)
                    }
                </td>
                <td>
                    <a href="~/Lab7/Edit/@Item.Id" class="btn btn-outline-primary">@Resources.Resource.Edit</a>
                    <a href="~/Lab7/Delete/@Item.Id" class="btn btn-outline-danger mt-3">@Resources.Resource.Delete</a>
                </td>
            </tr>
        }
    </table>
</div>

