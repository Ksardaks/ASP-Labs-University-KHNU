@model List<Lab4_5_6_7.Models.Category>
@{
    bool EN = false;
    if (Request.Cookies.Get("lang") != null)
    {
        if (Request.Cookies.Get("lang").Value == "en")
        {
            EN = true;
        }
    }
    ViewBag.Title = "Table";
}

<div class="row mt-5">
    <a href="~/Lab7/CatAdd" class="btn btn-outline-primary col-12">@Resources.Resource.Add</a>
    <table class="mt-5 table-bordered table table-striped col-12" style="margin-left: auto; margin-right: auto;">
        <tr>
            <th>@Resources.Resource.Name</th>
            <th>@Resources.Resource.Operations</th>
        </tr>
        @foreach (var Item in Model)
        {
            <tr>
                <td>
                    @if (EN)
                    {
                        @(Item.CategoryNameEN)
                    }
                    else
                    {
                        @(Item.CategoryName)
                    }
                </td>
            <td>
                <a href="~/Lab7/CatEdit/@Item.Id" class="btn btn-outline-primary">@Resources.Resource.Edit</a>
                <a href="~/Lab7/CatDelete/@Item.Id" class="btn btn-outline-danger">@Resources.Resource.Delete</a>
            </td>
        </tr>
    }
    </table>
</div>

