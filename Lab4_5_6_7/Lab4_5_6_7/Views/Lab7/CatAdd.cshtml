
@{
    ViewBag.Title = "Add";
}

    <div class="row col-12">
        @using (Html.BeginForm("CatAdd", "Lab7", FormMethod.Post, new { @class = "text-center row mt-5", role = "form", enctype = "multipart/form-data" }))
        {
            <label class="col-12 control-label">@Resources.Resource.Name</label>
            <input type="text" name="Name" class="form-control mb-5" />
            <label class="col-12 control-label">@Resources.Resource.Name EN</label>
            <input type="text" name="NameEN" class="form-control mb-5" />

            <input type="submit" value="@Resources.Resource.Submit" class="btn btn-outline-success col-5" />
            <a href="~/Lab7/CategoryTable" class="btn btn-outline-primary offset-2 col-5">@Resources.Resource.Cancel</a>
        }
    </div>

