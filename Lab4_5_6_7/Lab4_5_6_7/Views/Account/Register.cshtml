@model Lab4_5_6_7.Models.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}

    <div class="row">
        <h4 class="col-12 mt-5">Реєстрація</h4>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal col-6 mt-5 mb-5 ml-5", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="mb-3">
                <label for="Login" class="form-label">Логін</label>
                <input type="text" class="form-control" name="Login" id="Login">
            </div>
            <div class="mb-3">
                <label for="Password" class="form-label">Пароль</label>
                <input type="password" class="form-control" name="Password" id="Password">
            </div>
            <div class="mb-3">
                <label for="ConfirmPassword" class="form-label">Підтвердження пароля</label>
                <input type="password" class="form-control" name="ConfirmPassword" id="ConfirmPassword">
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-success" value="Регистрация" />
                </div>
            </div>
        }

    </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
